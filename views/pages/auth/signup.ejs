<%- include('../../partials/header.ejs') %>


<div class="container my-container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body">
                <h4>Create A New Account</h4>
                <form action="/auth/signup" method="POST">
                    <div class="form-group">
                        <label for="username">Enter Your Username</label>
                        <input type="text" class="form-control <%= error.username ? 'is-invalid' : '' %>"
                            name="username" id="username" value="<%= value.username && value.username %>">
                        <div class="invalid-feedback">
                            <%= error.username && error.username %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email">Enter Your Email</label>
                        <input type="email" class="form-control <%= error.email ? 'is-invalid' : '' %>" name="email"
                            id="email" value="<%= value.email && value.email %>">
                        <div class="invalid-feedback">
                            <%= error.email && error.email %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password">Enter Your Password</label>
                        <input type="password" class="form-control <%= error.password ? 'is-invalid' : '' %>"
                            name="password" id="password">
                        <div class="invalid-feedback">
                            <%= error.password && error.password %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Enter Your Confirm Password</label>
                        <input type="password" class="form-control <%= error.confirmPassword ? 'is-invalid' : '' %>"
                            name="confirmPassword" id="confirmPassword">
                        <div class="invalid-feedback">
                            <%= error.confirmPassword && error.confirmPassword %>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary" value="SignUp">
                    <br />
                    <a href="/auth/login"> Already Have an Account? Please Login in Your Account </a>
                </form>
            </div>
        </div>
    </div>
</div>


<%- include('../../partials/footer.ejs') %>
</bode>

</html>